@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="admin-layout">
    <aside class="sidebar">
        <div class="sidebar-header">
            <h1 class="brand-logo">Midas</h1>
        </div>

        <nav class="nav-scroll">
            
            <div class="nav-section-label">MAIN</div>
            <div class="nav-group">
                <NavLink href="/dashboard" class="nav-item" Match="NavLinkMatch.All">
                    <i class="bi bi-grid-fill nav-icon"></i>
                    <span>Dashboard</span>
                </NavLink>
            </div>

            <div class="nav-section-label">OPERATIONS</div>
            <div class="nav-group">
                <NavLink href="/inventory" class="nav-item">
                    <i class="bi bi-box-seam-fill nav-icon"></i>
                    <span>Inventory</span>
                </NavLink>
                
                <NavLink href="/purchase" class="nav-item">
                    <i class="bi bi-bag-plus-fill nav-icon"></i>
                    <span>Purchase</span>
                </NavLink>

                <NavLink href="/sales" class="nav-item">
                    <i class="bi bi-receipt nav-icon"></i>
                    <span>Sales</span>
                </NavLink>
            </div>

            <div class="nav-section-label">FINANCE</div>
            <div class="nav-group">
                <NavLink href="/expenses" class="nav-item">
                    <i class="bi bi-credit-card-fill nav-icon"></i>
                    <span>Expenses</span>
                </NavLink>
                <NavLink href="/payroll" class="nav-item">
                    <i class="bi bi-wallet-fill nav-icon"></i>
                    <span>Payroll</span>
                </NavLink>
                <NavLink href="/finance-report" class="nav-item">
                    <i class="bi bi-pie-chart-fill nav-icon"></i>
                    <span>Finance Report</span>
                </NavLink>
            </div>

            <div class="nav-section-label">ADMINISTRATION</div>
            <div class="nav-group">
                <NavLink href="/employees" class="nav-item">
                    <i class="bi bi-people-fill nav-icon"></i>
                    <span>Employees</span>
                </NavLink>
                <NavLink href="/settings" class="nav-item">
                    <i class="bi bi-gear-fill nav-icon"></i>
                    <span>Settings</span>
                </NavLink>
                 <NavLink href="/admin-profile" class="nav-item">
                    <i class="bi bi-person-badge-fill nav-icon"></i>
                    <span>Profile</span>
                </NavLink>
            </div>

        </nav>

        <div class="user-profile-bar">
            <div class="avatar">CH</div>
            <div class="user-info">
                <span class="name">Cherylou Hong</span>
                <span class="role">Administrator</span>
            </div>
            <button class="logout-btn" title="Logout"><i class="bi bi-box-arrow-right"></i></button>
        </div>
    </aside>

    <main class="main-content">
        @Body
    </main>
</div>

<style>
    /* --- LAYOUT VARIABLES --- */
    :root {
        --sidebar-width: 260px;
        --bg-body: #F3F4F6;       /* Light Grey Background like image */
        --bg-sidebar: #FFFFFF;    /* White Sidebar */
        --text-primary: #1F2937;  /* Dark Text */
        --text-secondary: #9CA3AF;/* Light Grey Text (for headers) */
        --accent-navy: #02001E;   /* Your Brand Color */
        --accent-hover: #F3F4F6;  /* Light Hover */
        --active-bg: #02001E;     /* Active Item Background */
        --active-text: #FFFFFF;   /* Active Item Text */
    }

    /* --- STRUCTURE --- */
    .admin-layout {
        display: flex;
        height: 100vh;
        width: 100vw;
        background-color: var(--bg-body);
        font-family: 'Inter', 'Segoe UI', sans-serif; /* Clean font */
        overflow: hidden;
    }

    /* --- SIDEBAR STYLING --- */
    .sidebar {
        width: var(--sidebar-width);
        background-color: var(--bg-sidebar);
        border-right: 1px solid #E5E7EB;
        display: flex;
        flex-direction: column;
        flex-shrink: 0;
    }

    .sidebar-header {
        height: 70px;
        display: flex;
        align-items: center;
        padding: 0 1.5rem;
        /* border-bottom: 1px solid #f0f0f0; Optional: remove for cleaner look */
    }

    .brand-logo {
        font-family: serif; /* Matches your "Midas" logo style */
        font-weight: 800;
        font-size: 1.75rem;
        color: var(--accent-navy);
        margin: 0;
    }

    /* --- NAVIGATION --- */
    .nav-scroll {
        flex: 1;
        overflow-y: auto;
        padding: 1.5rem 1rem;
    }

    /* THE SECTION LABELS (The "Sectioning" you asked for) */
    .nav-section-label {
        font-size: 0.7rem;
        font-weight: 700;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-top: 1.5rem;
        margin-bottom: 0.5rem;
        padding-left: 0.75rem; /* Align with text of links */
    }
    
    /* Remove top margin for the very first label */
    .nav-section-label:first-child {
        margin-top: 0;
    }

    .nav-group {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .nav-item {
        display: flex;
        align-items: center;
        padding: 0.6rem 0.75rem;
        border-radius: 8px;
        color: #4B5563; /* Soft dark grey */
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .nav-icon {
        font-size: 1.1rem;
        margin-right: 0.75rem;
        color: #9CA3AF; /* Icon color inactive */
        transition: color 0.2s;
    }

    /* Hover State */
    .nav-item:hover {
        background-color: var(--accent-hover);
        color: var(--accent-navy);
    }
    .nav-item:hover .nav-icon {
        color: var(--accent-navy);
    }

    /* Active State */
    .nav-item.active {
        background-color: var(--active-bg);
        color: var(--active-text);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }
    
    .nav-item.active .nav-icon {
        color: var(--active-text); /* White icon on active */
    }

    /* --- USER PROFILE BOTTOM BAR --- */
    .user-profile-bar {
        padding: 1rem;
        border-top: 1px solid #E5E7EB;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .avatar {
        width: 36px;
        height: 36px;
        background-color: var(--accent-navy);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .user-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    .user-info .name {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--text-primary);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .user-info .role {
        font-size: 0.75rem;
        color: var(--text-secondary);
    }

    .logout-btn {
        background: none;
        border: none;
        color: var(--text-secondary);
        cursor: pointer;
        padding: 5px;
        border-radius: 4px;
        transition: color 0.2s;
    }
    .logout-btn:hover {
        color: #EF4444; /* Red on hover */
        background-color: #FEF2F2;
    }

    /* --- MAIN CONTENT AREA --- */
    .main-content {
        flex: 1;
        overflow-y: auto;
        padding: 0; /* Let pages handle their own padding */
    }
</style>