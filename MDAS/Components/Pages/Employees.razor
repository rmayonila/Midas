@page "/employees"
@using MDAS.Components.Layout
@using MDAS.Data
@inject EmployeeService EmployeeService
@inject IJSRuntime JS
@layout AdminLayout

<PageTitle>Midas - Employees</PageTitle>

<div class="container-fluid p-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-0 fw-bold" style="color: var(--accent-navy);">Workforce Management</h3>
            <span class="text-secondary small">Staff & Performance Tracking</span>
        </div>
        <button class="btn text-white rounded-pill px-4" style="background-color: #02001E;" @onclick="OpenAddModal">
            <i class="bi bi-person-plus-fill me-2"></i>Add Employee
        </button>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h5 class="fw-bold text-navy mb-0">Active Personnel</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Name / Role</th>
                                    <th>Status</th>
                                    <th>Avg. Performance</th>
                                    <th class="text-end pe-4">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @* FIX: Changed 'Employees' to 'EmployeesList' *@
                                @if (EmployeesList == null)
                                {
                                    <tr><td colspan="4" class="text-center py-5 text-muted">Loading...</td></tr>
                                }
                                else
                                {
                                    @* FIX: Changed loop variable source *@
                                    @foreach (var emp in EmployeesList)
                                    {
                                        <tr style="cursor:pointer;" @onclick="() => SelectEmployee(emp)">
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width:40px; height:40px; font-weight:bold; color:#02001E;">
                                                        @emp.FullName.Substring(0, 1)
                                                    </div>
                                                    <div>
                                                        <span class="fw-bold d-block text-navy">@emp.FullName</span>
                                                        <small class="text-muted">@emp.Role</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td><span class="badge bg-success-subtle text-success rounded-pill px-3">@emp.Status</span></td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="progress flex-grow-1" style="height: 6px; width: 100px;">
                                                        <div class="progress-bar bg-warning" role="progressbar"
                                                             style="width: @(GetRatingPercentage(emp.Id))%"></div>
                                                    </div>
                                                    <span class="ms-2 small fw-bold">@GetRatingScore(emp.Id)</span>
                                                </div>
                                            </td>
                                            <td class="text-end pe-4">
                                                <button class="btn btn-sm btn-outline-secondary rounded-circle" @onclick:stopPropagation="true" @onclick="() => OpenPerformanceModal(emp)">
                                                    <i class="bi bi-star-fill"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            @if (SelectedEmployee != null)
            {
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <div class="avatar-circle mx-auto mb-3">@SelectedEmployee.FullName.Substring(0, 1)</div>
                            <h5 class="fw-bold text-navy mb-0">@SelectedEmployee.FullName</h5>
                            <span class="text-muted small">@SelectedEmployee.Role • ₱@SelectedEmployee.Email/hr</span>
                        </div>

                        <hr class="text-secondary opacity-25" />

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="fw-bold text-navy mb-0">Performance Log</h6>
                            <button class="btn btn-sm btn-light text-primary fw-bold" @onclick="() => OpenPerformanceModal(SelectedEmployee)">+ Log Today</button>
                        </div>

                        <div class="performance-list">
                            @if (SelectedPerformanceLogs != null && SelectedPerformanceLogs.Count > 0)
                            {
                                @foreach (var log in SelectedPerformanceLogs)
                                {
                                    <div class="d-flex mb-3 align-items-start">
                                        <div class="me-3 text-center" style="width: 40px;">
                                            <span class="d-block fw-bold text-navy">@log.Date.ToString("dd")</span>
                                            <small class="text-muted" style="font-size:10px;">@log.Date.ToString("MMM")</small>
                                        </div>
                                        <div class="bg-light p-2 rounded-3 flex-grow-1">
                                            <div class="d-flex justify-content-between">
                                                <span class="badge @GetBadgeColor(log.Rating)">@log.Rating / 10</span>
                                            </div>
                                            <p class="small text-muted mb-0 mt-1">@log.Notes</p>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-center text-muted small py-4">No performance logs found.</p>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm border-0 rounded-4 h-100 d-flex align-items-center justify-content-center text-center p-5">
                    <i class="bi bi-person-badge display-4 text-light mb-3"></i>
                    <p class="text-muted">Select an employee from the list<br>to view performance details.</p>
                </div>
            }
        </div>
    </div>
</div>

@if (IsAddModalOpen)
{
    <div class="modal-backdrop show"></div>
    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4 border-0 shadow">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title fw-bold">New Employee</h5>
                    <button type="button" class="btn-close" @onclick="CloseModals"></button>
                </div>
                <div class="modal-body">

                    <input class="form-control mb-3" placeholder="Full Name" @bind="NewEmployee.FullName" />
                    <input class="form-control mb-3" placeholder="Role (e.g. Sales Associate)" @bind="NewEmployee.Role" />

                    <input type="text" class="form-control mb-3" placeholder="Contact Number" @bind="NewEmployee.ContactNumber" />

                    <input type="email" class="form-control mb-3" placeholder="Email Address" @bind="NewEmployee.Email" />

                    <textarea class="form-control mb-3" rows="3" placeholder="Full Address" @bind="NewEmployee.Address"></textarea>

                </div>
                <div class="modal-footer border-top-0">
                    <button class="btn text-white rounded-pill px-4" style="background-color: #02001E;" @onclick="SaveEmployee">Save Record</button>
                </div>
            </div>
        </div>
    </div>
}

@if (IsPerfModalOpen && SelectedEmployee != null)
{
    <div class="modal-backdrop show"></div>
    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4 border-0 shadow">
                <div class="modal-header bg-navy text-white" style="background-color:#02001E;">
                    <h5 class="modal-title">Daily Evaluation: @SelectedEmployee.FullName</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseModals"></button>
                </div>
                <div class="modal-body text-center p-4">
                    <h6 class="text-muted mb-3">Rate Today's Performance (1-10)</h6>

                    <div class="d-flex justify-content-center gap-2 mb-4">
                        @for (int i = 1; i <= 10; i++)
                        {
                            var score = i;
                            <button class="btn btn-outline-primary rounded-circle"
                                    style="width:35px; height:35px; padding:0; @(NewPerformance.Rating == score ? "background-color:#02001E; color:white; border-color:#02001E;" : "")"
                                    @onclick="() => NewPerformance.Rating = score">
                                @i
                            </button>
                        }
                    </div>

                    <textarea class="form-control" rows="3" placeholder="Add notes (e.g. Excellent handling of customer complaint...)" @bind="NewPerformance.Notes"></textarea>
                </div>
                <div class="modal-footer border-top-0">
                    <button class="btn text-white rounded-pill px-4 w-100" style="background-color: #02001E;" @onclick="SavePerformance">Submit Log</button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .text-navy {
        color: #02001E;
    }

    .bg-navy {
        background-color: #02001E;
    }

    .avatar-circle {
        width: 80px;
        height: 80px;
        background-color: #02001E;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        font-weight: bold;
    }

    .modal-backdrop {
        background-color: rgba(0,0,0,0.5);
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: 1040;
    }

    .performance-list {
        max-height: 400px;
        overflow-y: auto;
    }
</style>

@code {
    // FIX: Renamed 'Employees' to 'EmployeesList' to avoid error
    private List<Employee>? EmployeesList;
    private Dictionary<int, double> AvgRatings = new();

    private Employee? SelectedEmployee;
    private List<EmployeePerformance>? SelectedPerformanceLogs;

    private Employee NewEmployee = new Employee();
    private EmployeePerformance NewPerformance = new EmployeePerformance();

    private bool IsAddModalOpen = false;
    private bool IsPerfModalOpen = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        EmployeesList = await EmployeeService.GetEmployeesAsync();

        // Pre-fetch ratings
        if (EmployeesList != null)
        {
            foreach (var e in EmployeesList)
            {
                if (!AvgRatings.ContainsKey(e.Id))
                {
                    AvgRatings[e.Id] = await EmployeeService.GetAverageRatingAsync(e.Id);
                }
            }
        }
    }

    private async Task SelectEmployee(Employee emp)
    {
        SelectedEmployee = emp;
        SelectedPerformanceLogs = await EmployeeService.GetPerformanceAsync(emp.Id);
    }

    // --- MODAL CONTROLS ---
    private void OpenAddModal()
    {
        NewEmployee = new Employee();
        IsAddModalOpen = true;
    }

    private void OpenPerformanceModal(Employee emp)
    {
        SelectedEmployee = emp;
        NewPerformance = new EmployeePerformance { EmployeeId = emp.Id, Date = DateTime.Now, Rating = 8 };
        IsPerfModalOpen = true;
    }

    private void CloseModals()
    {
        IsAddModalOpen = false;
        IsPerfModalOpen = false;
    }

    // --- SAVE LOGIC ---
    private async Task SaveEmployee()
    {
        if (!string.IsNullOrEmpty(NewEmployee.FullName))
        {
            await EmployeeService.SaveEmployeeAsync(NewEmployee);
            await LoadData();
            CloseModals();
        }
    }

    private async Task SavePerformance()
    {
        if (NewPerformance.Rating > 0)
        {
            await EmployeeService.AddPerformanceLogAsync(NewPerformance);

            if (SelectedEmployee != null)
            {
                AvgRatings[SelectedEmployee.Id] = await EmployeeService.GetAverageRatingAsync(SelectedEmployee.Id);
                SelectedPerformanceLogs = await EmployeeService.GetPerformanceAsync(SelectedEmployee.Id);
            }
            CloseModals();
        }
    }

    // --- HELPERS ---
    private double GetRatingPercentage(int empId)
    {
        return AvgRatings.ContainsKey(empId) ? (AvgRatings[empId] * 10) : 0;
    }

    private string GetRatingScore(int empId)
    {
        return AvgRatings.ContainsKey(empId) ? AvgRatings[empId].ToString("0.0") : "-";
    }

    private string GetBadgeColor(int rating)
    {
        if (rating >= 8) return "bg-success";
        if (rating >= 5) return "bg-warning text-dark";
        return "bg-danger";
    }
}