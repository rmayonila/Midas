@page "/expenses"
@using MDAS.Components.Layout
@using MDAS.Data
@inject ExpenseService ExpenseService
@layout AdminLayout

<PageTitle>Midas - Expenses</PageTitle>

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-0 fw-bold" style="color: var(--accent-navy);">Expenses</h3>
            <span class="text-secondary small">Operational Cost Tracker</span>
        </div>
        <div>
            <button class="btn btn-outline-secondary me-2 rounded-pill" @onclick="OpenCategoryModal">
                <i class="bi bi-tags-fill"></i> Manage Categories
            </button>
            <button class="btn btn-primary rounded-pill" style="background-color: #02001E; border: none;" @onclick="OpenExpenseModal">
                <i class="bi bi-plus-lg"></i> Add Expense
            </button>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h5 class="card-title mb-0 text-primary"><i class="bi bi-list-check me-2"></i>Expense Log</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Date</th>
                                    <th>Category</th>
                                    <th>Description</th>
                                    <th class="text-end pe-4">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ExpenseList == null)
                                {
                                    <tr><td colspan="4" class="text-center py-4 text-muted">Loading...</td></tr>
                                }
                                else if (ExpenseList.Count == 0)
                                {
                                    <tr><td colspan="4" class="text-center py-4 text-muted">No expenses recorded yet.</td></tr>
                                }
                                else
                                {
                                    @foreach (var item in ExpenseList)
                                    {
                                        <tr>
                                            <td class="ps-4">@item.Date.ToString("MMM dd, yyyy")</td>
                                            <td><span class="badge bg-light text-dark border">@item.Category</span></td>
                                            <td>@item.Description</td>
                                            <td class="text-end pe-4 fw-bold">₱ @item.Amount.ToString("N2")</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h5 class="card-title mb-0 text-primary"><i class="bi bi-pie-chart me-2"></i>Categories</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        @if (Categories != null)
                        {
                            @foreach (var cat in Categories)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center px-4">
                                    <span>@cat.Name</span>
                                    <span class="badge @(cat.Type == "Fixed" ? "bg-primary" : "bg-warning text-dark") rounded-pill">
                                        @cat.Type
                                    </span>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@if (IsExpenseModalOpen)
{
    <div class="modal-backdrop show"></div>
    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4 border-0 shadow">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title fw-bold">Record Expense</h5>
                    <button type="button" class="btn-close" @onclick="CloseModals"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label small text-muted fw-bold">CATEGORY</label>
                        <select class="form-select" @bind="NewExpense.Category">
                            <option value="" disabled selected>Select...</option>
                            @if (Categories != null)
                            {
                                @foreach (var cat in Categories)
                                {
                                    <option value="@cat.Name">@cat.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label small text-muted fw-bold">DESCRIPTION</label>
                        <input type="text" class="form-control" @bind="NewExpense.Description" placeholder="e.g. Monthly Rent" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small text-muted fw-bold">AMOUNT (₱)</label>
                        <input type="number" class="form-control" @bind="NewExpense.Amount" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small text-muted fw-bold">DATE</label>
                        <input type="date" class="form-control" @bind="NewExpense.Date" />
                    </div>
                </div>
                <div class="modal-footer border-top-0">
                    <button class="btn btn-light rounded-pill" @onclick="CloseModals">Cancel</button>
                    <button class="btn btn-primary rounded-pill px-4" style="background-color: #02001E; border: none;" @onclick="SaveExpense">Save</button>
                </div>
            </div>
        </div>
    </div>
}

@if (IsCategoryModalOpen)
{
    <div class="modal-backdrop show"></div>
    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4 border-0 shadow">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title fw-bold">Manage Categories</h5>
                    <button type="button" class="btn-close" @onclick="CloseModals"></button>
                </div>
                <div class="modal-body">
                    <div class="input-group mb-4">
                        <input type="text" class="form-control" placeholder="New Category Name" @bind="NewCategoryName" />
                        <select class="form-select" style="max-width: 110px;" @bind="NewCategoryType">
                            <option value="Fixed">Fixed</option>
                            <option value="Variable">Variable</option>
                        </select>
                        <button class="btn btn-success" @onclick="AddCategory">Add</button>
                    </div>

                    <ul class="list-group">
                        @if (Categories != null)
                        {
                            @foreach (var cat in Categories)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@cat.Name <small class="text-muted">(@cat.Type)</small></span>
                                    <button class="btn btn-sm btn-outline-danger border-0" @onclick="() => DeleteCategory(cat)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </li>
                            }
                        }
                    </ul>
                </div>
                <div class="modal-footer border-top-0">
                    <button class="btn btn-light rounded-pill w-100" @onclick="CloseModals">Close</button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .modal-backdrop {
        background-color: rgba(0,0,0,0.5);
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: 1040;
    }

    .text-navy {
        color: #02001E;
    }
</style>

@code {
    // --- STATE VARIABLES ---
    private bool IsExpenseModalOpen = false;
    private bool IsCategoryModalOpen = false;

    // Data Holders
    private ExpenseRecord NewExpense = new ExpenseRecord();
    private string NewCategoryName = "";
    private string NewCategoryType = "Variable";

    // Data Lists
    private List<ExpenseCategory>? Categories;
    private List<ExpenseRecord>? ExpenseList;

    // --- INITIALIZATION ---
    protected override async Task OnInitializedAsync()
    {
        // Seed default categories if empty
        await ExpenseService.SeedDefaultsAsync();
        await LoadData();
    }

    private async Task LoadData()
    {
        Categories = await ExpenseService.GetCategoriesAsync();
        ExpenseList = await ExpenseService.GetExpensesAsync();
    }

    // --- MODAL CONTROLS ---
    private void OpenExpenseModal()
    {
        NewExpense = new ExpenseRecord { Date = DateTime.Now };
        IsExpenseModalOpen = true;
    }

    private void OpenCategoryModal()
    {
        NewCategoryName = "";
        IsCategoryModalOpen = true;
    }

    private void CloseModals()
    {
        IsExpenseModalOpen = false;
        IsCategoryModalOpen = false;
    }

    // --- SAVE LOGIC ---
    private async Task SaveExpense()
    {
        if (!string.IsNullOrWhiteSpace(NewExpense.Category) && NewExpense.Amount > 0)
        {
            await ExpenseService.AddExpenseAsync(NewExpense);
            await LoadData();
            CloseModals();
        }
    }

    private async Task AddCategory()
    {
        if (!string.IsNullOrWhiteSpace(NewCategoryName))
        {
            await ExpenseService.AddCategoryAsync(new ExpenseCategory { Name = NewCategoryName, Type = NewCategoryType });
            NewCategoryName = "";
            await LoadData();
        }
    }

    private async Task DeleteCategory(ExpenseCategory cat)
    {
        await ExpenseService.DeleteCategoryAsync(cat);
        await LoadData();
    }
}