@page "/payroll"
@using MDAS.Components.Layout
@using MDAS.Data
@inject PayrollService PayrollService
@inject IJSRuntime JS
@layout AdminLayout

<PageTitle>Midas - Payroll</PageTitle>

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-0 fw-bold" style="color: var(--accent-navy);">Payroll Management</h3>
        </div>
        <div class="d-flex gap-2">
            <button class="btn rounded-pill px-4 @(activeTab == "payroll" ? "btn-navy" : "btn-outline-secondary")" @onclick='() => activeTab = "payroll"'>
                Payroll
            </button>
            <button class="btn rounded-pill px-4 @(activeTab == "employees" ? "btn-navy" : "btn-outline-secondary")" @onclick='() => activeTab = "employees"'>
                Employees
            </button>
            <button class="btn rounded-pill px-4 @(activeTab == "settings" ? "btn-navy" : "btn-outline-secondary")" @onclick='() => activeTab = "settings"'>
                Settings
            </button>
        </div>
    </div>

    @if (activeTab == "payroll")
    {
        <div class="row g-4">
            <div class="col-lg-9">
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="card shadow-sm border-0 rounded-4 h-100 p-3">
                            <h6 class="text-muted small fw-bold text-uppercase">Total Employees</h6>
                            <h2 class="fw-bold text-navy mb-0">@EmployeesList?.Count</h2>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card shadow-sm border-0 rounded-4 h-100 p-3">
                            <h6 class="text-muted small fw-bold text-uppercase">Total Paid (YTD)</h6>
                            <h2 class="fw-bold text-success mb-0">₱ @PayrollHistory?.Sum(x => x.NetPay).ToString("N2")</h2>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                        <h5 class="fw-bold text-navy mb-0">Payslip History</h5>

                        <button class="btn btn-navy rounded-pill px-4 btn-sm" @onclick="OpenRunPayrollModal">
                            <i class="bi bi-plus-lg me-2"></i>New
                        </button>
                    </div>

                    <div class="card-body p-0">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Date</th>
                                    <th>Employee</th>
                                    <th>Basic (Rate * Hrs)</th>
                                    <th>Deductions</th>
                                    <th class="text-end pe-4">Net Pay</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (PayrollHistory != null)
                                {
                                    @foreach (var p in PayrollHistory)
                                    {
                                        <tr>
                                            <td class="ps-4">@p.PayDate.ToString("MMM dd")</td>
                                            <td class="fw-bold">@p.EmployeeName</td>
                                            <td>@p.BasicSalary.ToString("N2")</td>
                                            <td class="text-danger">-@((p.DeductionTax + p.DeductionBenefits + p.DeductionLoans).ToString("N2"))</td>
                                            <td class="text-end pe-4 fw-bold text-success">₱@p.NetPay.ToString("N2")</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body">
                        <h6 class="fw-bold text-navy mb-3">Quick Rates</h6>
                        <ul class="list-group list-group-flush small">
                            <li class="list-group-item d-flex justify-content-between"><span>Tax</span> <strong>@CurrentSettings.TaxPercentage%</strong></li>
                            <li class="list-group-item d-flex justify-content-between"><span>SSS</span> <strong>@CurrentSettings.SSSAmount</strong></li>
                            <li class="list-group-item d-flex justify-content-between"><span>PhilHealth</span> <strong>@CurrentSettings.PhilHealthAmount</strong></li>
                        </ul>
                        <button class="btn btn-outline-secondary btn-sm w-100 mt-3" @onclick='() => activeTab = "settings"'>Edit Settings</button>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (activeTab == "employees")
    {
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="fw-bold text-navy mb-0">Employee Directory</h5>
                
            </div>
            <div class="card-body p-0">
                <table class="table table-hover align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Name</th>
                            <th>Role</th>
                            
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (EmployeesList != null)
                        {
                            @foreach (var emp in EmployeesList)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">@emp.FullName</td>
                                    <td>@emp.Role</td>
                                    
                                    <td><span class="badge bg-success-subtle text-success rounded-pill">@emp.Status</span></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    @if (activeTab == "settings")
    {
        <div class="card shadow-sm border-0 rounded-4" style="max-width: 600px; margin: 0 auto;">
            <div class="card-header bg-white py-3 border-bottom-0">
                <h5 class="fw-bold text-navy mb-0">Global Payroll Configuration</h5>
                <p class="text-muted small mb-0">These deductions apply automatically to all employees.</p>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label fw-bold">Tax Rate (%)</label>
                    <input type="number" class="form-control" @bind="CurrentSettings.TaxPercentage" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">SSS Contribution (Fixed Amount)</label>
                    <input type="number" class="form-control" @bind="CurrentSettings.SSSAmount" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">PhilHealth Contribution (Fixed Amount)</label>
                    <input type="number" class="form-control" @bind="CurrentSettings.PhilHealthAmount" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Pag-IBIG Contribution (Fixed Amount)</label>
                    <input type="number" class="form-control" @bind="CurrentSettings.PagIbigAmount" />
                </div>
                <button class="btn btn-navy w-100 py-2" @onclick="SaveSettings">Save Changes</button>
            </div>
        </div>
    }
</div>

@if (showEmployeeModal)
{
    <div class="modal-backdrop show"></div>
    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4 border-0 shadow">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title fw-bold">New Employee</h5>
                    <button type="button" class="btn-close" @onclick="() => showEmployeeModal = false"></button>
                </div>
                <div class="modal-body">
                    <input class="form-control mb-2" placeholder="Full Name" @bind="newEmployee.FullName" />
                    <input class="form-control mb-2" placeholder="Role (e.g. Cashier)" @bind="newEmployee.Role" />
                   
                </div>
                <div class="modal-footer border-top-0">
                    <button class="btn text-white rounded-pill px-4" style="background-color: #02001E;" @onclick="SaveEmployee">Save Record</button>
                </div>
            </div>
        </div>
    </div>
}

@if (showRunPayrollModal)
{
    <div class="modal-backdrop show"></div>
    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content rounded-4 border-0 shadow">
                <div class="modal-header bg-navy text-white">
                    <h5 class="modal-title">Run Payroll</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="() => showRunPayrollModal = false"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label small text-muted fw-bold">SELECT EMPLOYEE</label>
                            <select class="form-select" @onchange="OnEmployeeSelected">
                                <option value="">Select...</option>
                                @if (EmployeesList != null)
                                {
                                    @foreach (var e in EmployeesList)
                                    {
                                        <option value="@e.Id">@e.FullName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small text-muted fw-bold">HOURLY RATE</label>
                            <input type="text" class="form-control" value="₱ @selectedHourlyRate.ToString("N2")" readonly />
                        </div>

                        <div class="col-md-12">
                            <div class="alert alert-info py-2 small">
                                <i class="bi bi-info-circle me-1"></i> Attendance data integration coming soon. Please enter hours manually for now.
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label small text-muted fw-bold">TOTAL HOURS WORKED</label>
                            <input type="number" class="form-control" @bind="inputHours" @bind:after="RecalculatePay" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small text-muted fw-bold">GROSS PAY (Rate * Hours)</label>
                            <input type="text" class="form-control fw-bold" value="₱ @calculatedGross.ToString("N2")" readonly />
                        </div>

                        <div class="col-12"><hr /></div>

                        <div class="col-md-3">
                            <label class="small text-muted">Tax (@CurrentSettings.TaxPercentage%)</label>
                            <input type="text" class="form-control form-control-sm" value="@calcTax.ToString("N2")" readonly />
                        </div>
                        <div class="col-md-3">
                            <label class="small text-muted">SSS</label>
                            <input type="text" class="form-control form-control-sm" value="@CurrentSettings.SSSAmount" readonly />
                        </div>
                        <div class="col-md-3">
                            <label class="small text-muted">PhilHealth</label>
                            <input type="text" class="form-control form-control-sm" value="@CurrentSettings.PhilHealthAmount" readonly />
                        </div>
                        <div class="col-md-3">
                            <label class="small text-muted">Pag-IBIG</label>
                            <input type="text" class="form-control form-control-sm" value="@CurrentSettings.PagIbigAmount" readonly />
                        </div>

                        <div class="col-12 mt-4 text-end">
                            <h3>Net Pay: <span class="text-success fw-bold">₱ @calculatedNet.ToString("N2")</span></h3>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-navy px-4 rounded-pill" @onclick="ConfirmPayroll">Confirm & Generate</button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .text-navy {
        color: #02001E;
    }

    .bg-navy {
        background-color: #02001E;
    }

    .btn-navy {
        background-color: #02001E;
        color: white;
        transition: 0.2s;
    }

        .btn-navy:hover {
            background-color: #0c006b;
            color: white;
        }

    .modal-backdrop {
        background-color: rgba(0,0,0,0.5);
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: 1040;
    }
</style>

@code {
    private string activeTab = "payroll"; // Changed default tab to 'payroll'
    private bool showEmployeeModal = false;
    private bool showRunPayrollModal = false;

    // Data Holders
    private List<Employee>? EmployeesList;
    private PayrollSetting CurrentSettings = new PayrollSetting();
    private List<PayrollRecord>? PayrollHistory;

    // Form Variables
    private Employee newEmployee = new Employee();

    // Calculation Variables
    private int selectedEmployeeId;
    private string selectedEmployeeName = "";
    private decimal selectedHourlyRate = 0;
    private decimal inputHours = 0;

    // Results
    private decimal calculatedGross => selectedHourlyRate * inputHours;
    private decimal calcTax => calculatedGross * (CurrentSettings.TaxPercentage / 100);
    private decimal calculatedNet => calculatedGross - (calcTax + CurrentSettings.SSSAmount + CurrentSettings.PhilHealthAmount + CurrentSettings.PagIbigAmount);

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        EmployeesList = await PayrollService.GetEmployeesAsync();
        CurrentSettings = await PayrollService.GetSettingsAsync();
        PayrollHistory = await PayrollService.GetHistoryAsync();
    }

    // --- EMPLOYEE LOGIC ---
    private void OpenAddEmployeeModal()
    {
        newEmployee = new Employee();
        showEmployeeModal = true;
    }

    private async Task SaveEmployee()
    {
        if (!string.IsNullOrEmpty(newEmployee.FullName))
        {
            await PayrollService.AddEmployeeAsync(newEmployee);
            await LoadData();
            showEmployeeModal = false;
        }
    }

    // --- SETTINGS LOGIC ---
    private async Task SaveSettings()
    {
        await PayrollService.SaveSettingsAsync(CurrentSettings);
        await JS.InvokeVoidAsync("alert", "Settings Saved Successfully!");
    }

    // --- PAYROLL CALCULATION LOGIC ---
    private void OpenRunPayrollModal()
    {
        inputHours = 0;
        selectedHourlyRate = 0;
        selectedEmployeeId = 0;
        showRunPayrollModal = true;
    }

    private void OnEmployeeSelected(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int id))
        {
            var emp = EmployeesList?.FirstOrDefault(x => x.Id == id);
            if (emp != null)
            {
                selectedEmployeeId = emp.Id;
                selectedEmployeeName = emp.FullName;
                
                RecalculatePay();
            }
        }
    }

    private void RecalculatePay()
    {
        StateHasChanged(); // Updates the Gross/Net numbers in real-time
    }

    private async Task ConfirmPayroll()
    {
        if (selectedEmployeeId == 0) return;

        var record = new PayrollRecord
        {
            EmployeeName = selectedEmployeeName,
            PayDate = DateTime.Now,
            BasicSalary = calculatedGross, // Calculated from Hours * Rate
            Allowances = 0, // Add allowance field later if needed
            DeductionTax = calcTax,
            DeductionBenefits = CurrentSettings.SSSAmount + CurrentSettings.PhilHealthAmount + CurrentSettings.PagIbigAmount,
            DeductionLoans = 0,
            NetPay = calculatedNet
        };

        await PayrollService.CreatePayslipAsync(record);
        await LoadData();
        showRunPayrollModal = false;
        await JS.InvokeVoidAsync("alert", "Payslip Generated!");
    }
}