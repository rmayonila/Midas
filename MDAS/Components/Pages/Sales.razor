@page "/sales"
@using MDAS.Components.Layout
@using MDAS.Data
@inject SalesService SalesService
@layout AdminLayout

<PageTitle>Midas - Sales</PageTitle>

<div class="container-fluid p-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-navy">
                @if (activeTab == "log") { <text>Revenue Audit Log</text> }
                else { <text>Void & Return Manager</text> }
            </h2>
            <p class="text-muted">Real Database Connection</p>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary rounded-pill" @onclick="GenerateDemoSale">
                <i class="bi bi-magic me-2"></i>Simulate Sale
            </button>

            <div class="bg-white p-1 rounded-pill border shadow-sm d-inline-flex">
                <button class="btn rounded-pill px-4 @(activeTab == "log" ? "btn-navy" : "btn-light text-muted")" @onclick='() => activeTab = "log"'>
                    <i class="bi bi-receipt me-2"></i>Log
                </button>
                <button class="btn rounded-pill px-4 @(activeTab == "voids" ? "btn-navy" : "btn-light text-muted")" @onclick='() => activeTab = "voids"'>
                    <i class="bi bi-arrow-counterclockwise me-2"></i>Void / Returns
                </button>
            </div>
        </div>
    </div>

    @if (activeTab == "log")
    {
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-4">
                <div class="row g-3 mb-4">
                    <div class="col-md-5">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 rounded-start-pill ps-3"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control border-start-0 rounded-end-pill bg-light"
                                   placeholder="Search Receipt..." @bind="searchText" @bind:event="oninput" />
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="bg-light text-secondary small text-uppercase">
                            <tr>
                                <th class="ps-3">Receipt #</th>
                                <th>Date</th>
                                <th>Items</th>
                                <th>Payment</th>
                                <th class="text-end">Total</th>
                                <th class="text-center">Status</th>
                                <th class="text-end pe-3">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var t in FilteredTransactions)
                            {
                                <tr>
                                    <td class="ps-3 fw-bold text-navy">@t.ReceiptNo</td>
                                    <td class="small text-muted">@t.Date.ToString("MMM dd HH:mm")</td>
                                    <td>
                                        <span class="d-block text-dark fw-medium">@t.ItemsSummary</span>
                                        <small class="text-muted">Cashier: @t.CashierName</small>
                                    </td>
                                    <td><span class="badge bg-light text-dark border">@t.PaymentMethod</span></td>
                                    <td class="text-end fw-bold">₱ @t.TotalAmount.ToString("N2")</td>
                                    <td class="text-center">
                                        <span class="badge @GetStatusBadge(t.Status) rounded-pill px-3">@t.Status</span>
                                    </td>
                                    <td class="text-end pe-3">
                                        @if(t.Status == "Completed")
                                        {
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => RequestVoid(t)">
                                                Request Void
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    @if (activeTab == "voids")
    {
        <div class="alert alert-light border shadow-sm d-flex align-items-center mb-4 rounded-3">
            <i class="bi bi-info-circle-fill text-navy fs-4 me-3"></i>
            <div>
                <strong>Manager Approval Required</strong>
                <div class="small text-muted">Review pending void requests below.</div>
            </div>
        </div>

        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary small text-uppercase">
                        <tr>
                            <th class="ps-4">Receipt</th>
                            <th>Cashier</th>
                            <th class="text-end">Amount</th>
                            <th class="text-end pe-4">Decision</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in PendingVoids)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-navy">@r.ReceiptNo</td>
                                <td>@r.CashierName</td>
                                <td class="text-end fw-bold">₱ @r.TotalAmount.ToString("N2")</td>
                                <td class="text-end pe-4">
                                    <button class="btn btn-sm btn-navy" @onclick="() => ApproveVoid(r)">Approve Void</button>
                                </td>
                            </tr>
                        }
                        @if (!PendingVoids.Any())
                        {
                            <tr><td colspan="4" class="text-center py-4 text-muted">No pending requests.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    .text-navy { color: #02001E; }
    .btn-navy { background-color: #02001E; color: white; }
</style>

@code {
    private string activeTab = "log";
    private string searchText = "";
    
    // DATA LISTS
    private List<SalesTransaction> AllTransactions = new List<SalesTransaction>();
    private List<SalesTransaction> PendingVoids = new List<SalesTransaction>();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        AllTransactions = await SalesService.GetSalesHistoryAsync();
        // Since we don't have a separate Request Table yet, we filter for a "PendingVoid" status simulation
        // In a real app, you'd have a separate Request Table. 
        // For now, let's just assume anything marked "Completed" can be voided directly.
    }

    // --- SEARCH FILTER ---
    private IEnumerable<SalesTransaction> FilteredTransactions =>
        string.IsNullOrWhiteSpace(searchText)
        ? AllTransactions
        : AllTransactions.Where(t => t.ReceiptNo.Contains(searchText, StringComparison.OrdinalIgnoreCase));

    // --- ACTIONS ---
    
    private void RequestVoid(SalesTransaction t)
    {
        // For this demo, adding to a temporary list so you can see it in the other tab
        if(!PendingVoids.Contains(t)) PendingVoids.Add(t);
        activeTab = "voids"; // Switch tab to show user
    }

    private async Task ApproveVoid(SalesTransaction t)
    {
        await SalesService.ProcessRefundAsync(t.Id, "Void");
        PendingVoids.Remove(t);
        await LoadData(); // Refresh main list to see status change
        activeTab = "log";
    }

    private async Task GenerateDemoSale()
    {
        var newSale = new SalesTransaction
        {
            ReceiptNo = "TRX-" + DateTime.Now.ToString("mmss"),
            Date = DateTime.Now,
            CashierName = "Demo User",
            TotalAmount = 1500.00m,
            Status = "Completed"
        };
        
        var items = new List<SalesTransactionItem>
        {
            new SalesTransactionItem { ProductName = "Oxford Shirt", Qty = 1, UnitPrice = 1500.00m }
        };

        await SalesService.CreateSaleAsync(newSale, items);
        await LoadData();
    }

    private string GetStatusBadge(string status)
    {
        return status switch
        {
            "Completed" => "bg-success-subtle text-success",
            "Voided" => "bg-danger-subtle text-danger",
            "Refunded" => "bg-warning-subtle text-warning",
            _ => "bg-light text-dark"
        };
    }
}